@model WebApplication1.ViewModels.MovieGenreViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (@Html.BeginForm("AddAndUpdate", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Number)
        @Html.TextBoxFor(m => m.Movie.Number, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(m => m.Movie.Id)
    @Html.HiddenFor(m => m.Movie.AddDate)

    <button type="submit" class="btn btn-primary">Save</button>

}

