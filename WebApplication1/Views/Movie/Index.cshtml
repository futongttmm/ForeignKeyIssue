@model IEnumerable<WebApplication1.Models.Movie>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Movies</h2>

<button type="button" class="btn btn-primary">
    @Html.ActionLink("NEW MOVIE", "Add", "Movie", null, new { @class = "btn btn-primary" })
</button>


@*@if (!Model.Any())
{
    <p>No movie yet.</p>
}*@

<table	class="table table-­‐bordered table-­‐hover">
    <thead>
        <tr>
            <th><b>Movies</b></th>
            <th><b>Genres</b></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@Html.ActionLink(m.Name, "Edit", "Movie", new { id = m.Id }, null)</td>
                <td>@m.Genre.Name</td>
            </tr>
        }
    </tbody>
</table>
